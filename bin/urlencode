#!/usr/bin/env ruby

require 'optparse'
require 'cgi'

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: urlencode [string]\n" \
    "  URL-encodes the provided string (or standard input)"
end

optparse.parse!

if ARGV.empty?
  str = STDIN.read
else
  str = ARGV.join ' '
end

puts CGI::escape str
