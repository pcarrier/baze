#!/usr/bin/env ruby

require 'optparse'
require 'cgi'

rounds = 1

optparse = OptionParser.new do |opts|
  opts.banner = "Usage: urldecode [-n 1] [string]\n" \
    "  URL-decodes the provided string (or standard input)"

  opts.on '-n', '--repeat TIMES', Integer do |n|
    rounds = n
  end
end

optparse.parse!

if ARGV.empty?
  str = STDIN.read
else
  str = ARGV.join ' '
end

rounds.times { str = CGI::unescape str }

puts str
